<div class='page-title'>
  Characteristics
</div>
<div style="float: left; width: 600px;">
  <%= form_for :characteristic_set, method: :post, url: character_characteristic_sets_path do |f| %>
    <div>Do you wish to prioritize your character's attributes?  This will allow you to arrange the attributes' values from highest to lowest (the top-most attribute the will have the highest roll value, and the bottom-most attribute will have the lowest roll value).</div>
    <div class="button-box">
      <div class="center w100">
        <button id='yes' class="not-movable w100" type="button">Yes</button>
        <button type="button" class="movable w100" id="no-order">No</button>
      </div>
    </div>

    <%= f.hidden_field :arranged, value: false %>
    <%= f.hidden_field :order %>

    <%
      characteristics = {
         strength: '?',
         dexterity: '?',
         power: '?',
         intelligence: '?',
         appearance: '?',
         constitution: '?',
         size: '?',
         education: '?'
      }
    %>
    <%= render 'order_characteristics', characteristics: characteristics %>

    <div class="button-box">
      <div class="center w100">
        <button type="submit" class="movable w100" id="submit">Roll it!</button>
        <button id='no' class="not-movable w100" type="submit">Roll it!</button>
      </div>
    </div>
<% end %>
</div>


<div style="float: left; width: 300px;">
  <%= render 'characteristic_info' %>
</div>
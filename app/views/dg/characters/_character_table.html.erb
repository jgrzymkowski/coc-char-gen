<table class="hover">
  <thead>
    <th>Name</th>
    <th>Profession</th>
    <th>Age</th>
    <th></th>
  </thead>

  <% characters.each do |character| %>
    <tr>
      <td><%= link_to character.display_name, character, method: :get %></td>
      <td><%= character.profession %></td>
      <td><%= character.age %></td>
      <td><%= link_to 'Download PDF', dg_character_path(character, format: :pdf), method: :get %></td>
    </tr>
  <% end %>
</table>

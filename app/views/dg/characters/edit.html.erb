<%= render '/shared/header' %>
<%= render '/shared/breadcrumbs', crumbs: [
  link_to(character.campaign.name, character.campaign),
  link_to(character.display_name, character),
  'Edit'] %>

<div class="grid-x align-center">
  <div class="cell small-12 medium-6">
    <fieldset class="fieldset">
      <legend>Edit Character</legend>
      <%= form_for character, method: :put, url: dg_character_path(character) do |f| %>
        <%= render 'character_inputs', f: f, character: character %>
      <% end %>
    </fieldset>
  </div>
</div>

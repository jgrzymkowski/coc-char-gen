<div class="top-bar">
  <div class="top-bar-left">
    <ul class="breadcrumbs">
      <li><%= link_to('Home', user_path(current_user)) %></li>
      <li><%= link_to(character.campaign.name, character.campaign) %></li>
      <li><%= link_to(character.display_name, character) %></li>
      <li>Edit</li>
    </ul>
  </div>
</div>
<div class="grid-x align-center">
  <div class="cell small-12 medium-6">
    <fieldset class="fieldset">
      <legend>Edit Bonds</legend>
      <%= form_for character, method: :put, url: dg_character_bonds_path(character) do |f| %>
        <% character.skill_set.bonds.times do |i| %>
          <%= f.text_field "bonds", multiple: true, value: character.bonds[i] %>
        <% end %>
        <%= f.submit 'Save', class: 'button' %>
      <% end %>
    </fieldset>
  </div>
</div>

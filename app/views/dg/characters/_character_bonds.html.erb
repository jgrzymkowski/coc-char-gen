<div class="dg-card">
  <div class="dg-card-header">
    <div class="clearfix" style="width: 100%">
      <div class="float-left">
        <h4>Bonds</h4>
      </div>
      <% if policy(character).edit? %>
        <div class="float-right">
          <%= link_to( 'Edit Bonds', dg_character_bonds_path(character), class: 'button small') %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="dg-card-section">
    <div class="grid-x">
      <div class="cell small-12 attribute">
        <div class='attribute-label'>Bonds</div>
        <ul>
        <% character.bonds.map do |bond| %>
          <li>
            <div class='attribute-value'><%= bond %></div>
          </li>
        <% end %>
        <ul>
      </div>
    </div>
  </div>
</div>
